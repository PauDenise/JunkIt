<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout"
    android:layout_marginBottom="30dp"
    >

    <ImageView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:background="@drawable/coverphoto"/>

    <ImageView
        android:id="@+id/aboutus"
        android:layout_width="wrap_content"
        android:layout_height="270dp"
        android:background="@drawable/grayback"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <ImageView
        android:id="@+id/vision"
        android:layout_width="wrap_content"
        android:layout_height="270dp"
        android:background="@drawable/creamback"
        app:layout_constraintTop_toBottomOf="@+id/aboutus" />

    <ImageView
        android:id="@+id/mission"
        android:layout_width="wrap_content"
        android:layout_height="270dp"
        android:background="@drawable/grayback"
        app:layout_constraintTop_toBottomOf="@+id/vision" />

    <ImageView
        android:id="@+id/developers"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:background="@drawable/creamback"
        app:layout_constraintTop_toBottomOf="@+id/mission" />


    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="ABOUT"
        android:textStyle="bold"
    android:fontFamily="@font/cabin"
    android:textSize="23sp"
    android:textColor="@color/black"
    android:layout_marginLeft="150dp"
    android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintLeft_toLeftOf="@+id/header" />

    <TextView
        android:layout_width="115dp"
        android:layout_height="90dp"
        android:text="Read the latest news about our environment"
        android:gravity="center"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="180sp"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintLeft_toLeftOf="@+id/header" />

    <TextView
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:text="Locate junk shops
near you"
        android:gravity="center"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="180sp"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintLeft_toLeftOf="@+id/header" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="95dp"
        android:text="Send your inquiries and feedback"
        android:gravity="center"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="180sp"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintLeft_toLeftOf="@+id/header" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VISION"
        android:gravity="center"
        android:fontFamily="@font/cabin"
        android:textStyle="bold"
        android:textSize="23sp"
        android:textColor="@color/black"
        android:layout_marginLeft="158dp"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@+id/aboutus"
        app:layout_constraintLeft_toLeftOf="@+id/aboutus" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MISSION"
        android:gravity="center"
        android:fontFamily="@font/cabin"
        android:textStyle="bold"
        android:textSize="23sp"
        android:textColor="@color/black"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@+id/vision"
        app:layout_constraintLeft_toLeftOf="@+id/vision" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEVELOPERS"
        android:gravity="center"
        android:fontFamily="@font/cabin"
        android:textStyle="bold"
        android:textSize="23sp"
        android:textColor="@color/black"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@+id/mission"
        app:layout_constraintLeft_toLeftOf="@+id/mission" />

    <LinearLayout
        android:id="@+id/linearAbout"
        android:layout_width="400dp"
        android:layout_height="270dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/header"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">


        <android.support.v7.widget.CardView

            android:layout_width="106dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="55dp"
            app:cardBackgroundColor="#f4b2cf"
            app:cardCornerRadius="5dp"
            app:cardElevation="12dp">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/newsicon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="95dp"
                android:fontFamily="@font/raleway"
                android:text="news reader"
                android:textColor="@color/black" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="102dp"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="55dp"
            app:cardBackgroundColor="#d3f4b2"
            app:cardCornerRadius="5dp"
            app:cardElevation="12dp">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/recycle1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="84dp"
                android:fontFamily="@font/raleway"
                android:text="junk shop"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="99dp"
                android:fontFamily="@font/raleway"
                android:text="locator"
                android:textColor="@color/black" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="55dp"
            app:cardBackgroundColor="#b2e9f4"
            app:cardCornerRadius="5dp"
            app:cardElevation="12dp">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/chaticon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="95dp"
                android:fontFamily="@font/raleway"
                android:text="inquiries"
                android:textColor="@color/black" />

        </android.support.v7.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearVision"
        android:layout_width="400dp"
        android:layout_height="270dp"
        app:layout_constraintTop_toBottomOf="@+id/aboutus"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="759dp"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
        android:layout_width="330dp"
        android:layout_height="200dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="55dp"
        app:cardBackgroundColor="#9c7dd8"
        app:cardCornerRadius="8dp"
        app:cardElevation="12dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/trash"
                android:alpha="0.7"
                >

                <TextView
                    android:layout_width="325dp"
                    android:layout_height="190dp"
                    android:gravity="center"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/antique_white"
                    android:textSize="22sp"
                    android:fontFamily="@font/ralewaybold"
                    android:textStyle="bold"
                    android:text="Our vision is to create a medium for people to know how to maintain environmental sustainability with proper waste management." />

            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearMission"
        android:layout_width="400dp"
        android:layout_height="270dp"
        app:layout_constraintTop_toBottomOf="@+id/vision"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="759dp"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="330dp"
            android:layout_height="190dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="55dp"
            app:cardBackgroundColor="#9c7dd8"
            app:cardCornerRadius="8dp"
            app:cardElevation="12dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="190dp"
                android:background="#8ca577"
                android:alpha="0.7"
                >

                <TextView
                    android:layout_width="325dp"
                    android:layout_height="190dp"
                    android:gravity="center"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/antique_white"
                    android:textSize="19sp"
                    android:fontFamily="@font/ralewaybold"
                    android:text="Providing people awareness in proper waste management, issues concerning the environment and giving users an opportunity to easily locate junk shops to recycle their waste." />

            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearDevelopers"
        android:layout_width="400dp"
        android:layout_height="480dp"
        app:layout_constraintTop_toBottomOf="@+id/mission"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="759dp"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/cardPau"
            android:layout_width="330dp"
            android:layout_height="420dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="100dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="10dp"
            app:cardElevation="12dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="500dp"
                >

                <ImageView
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/pauline"
                    />

                <TextView
                    android:layout_width="190dp"
                    android:layout_height="100dp"
                    android:text="Pauline Denise Aquino"
                    android:layout_marginLeft="180dp"
                    android:fontFamily="@font/ralewaybold"
                    android:layout_marginTop="65dp"
                    android:textColor="#000"
                    />

                <View
                    android:layout_width="140dp"
                    android:layout_height="1dp"
                    android:background="#000"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="95dp"
                    />

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="100dp"
                    android:fontFamily="@font/bellysans"
                    android:text="Main  Programmer"
                    android:textColor="#000"
                    android:textSize="17sp" />



                <ImageView
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="140dp"
                    android:background="@drawable/bless" />

                <TextView
                    android:layout_width="190dp"
                    android:layout_height="100dp"
                    android:text="Blessie Cuevas"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="@font/ralewaybold"
                    android:layout_marginTop="180dp"
                    android:textColor="#000"
                    />

                <View
                    android:layout_width="140dp"
                    android:layout_height="1dp"
                    android:background="#000"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="206dp"
                    />

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="216dp"
                    android:fontFamily="@font/bellysans"
                    android:text="GUI Designer"
                    android:textColor="#000"
                    android:textSize="17sp" />


                <ImageView
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="270dp"
                    android:background="@drawable/tine"
                    />


                <TextView
                    android:layout_width="190dp"
                    android:layout_height="100dp"
                    android:text="Cristine Joyce Dimarucut"
                    android:layout_marginLeft="172dp"
                    android:fontFamily="@font/ralewaybold"
                    android:layout_marginTop="315dp"
                    android:textColor="#000"
                    />

                <View
                    android:layout_width="170dp"
                    android:layout_height="1dp"
                    android:background="#000"
                    android:layout_marginLeft="172dp"
                    android:layout_marginTop="345dp"
                    />

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="172dp"
                    android:layout_marginTop="350dp"
                    android:fontFamily="@font/bellysans"
                    android:text="Programmer"
                    android:textColor="#000"
                    android:textSize="17sp" />



            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>





</android.support.constraint.ConstraintLayout>

</ScrollView>
